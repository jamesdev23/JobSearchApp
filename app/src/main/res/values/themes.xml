<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.KodegoJobSearchApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/royal_azure_blue</item>
        <item name="colorPrimaryVariant">@color/blue_bonnet</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_turquoise</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/royal_azure_blue</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/sourcesanspro_regular</item>

    </style>
    <style name="Theme.KodegoJobSearchApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.KodegoJobSearchApp.AppBarOverlay"
        parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.KodegoJobSearchApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>