<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".applicant_viewpager.AccountFragment"
    android:paddingTop="10dp"
    android:paddingStart="10dp"
    android:paddingEnd="10dp">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_edit_profile_picture"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/round_button"
        android:layout_margin="10dp"
        android:gravity="center"
        android:text="@string/edit_profile_picture"
        android:textColor="@color/white"
        android:textStyle="bold"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_edit_profile_details"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/round_button"
        android:layout_margin="10dp"
        android:text="@string/edit_profile_details"
        android:textColor="@color/white"
        android:textStyle="bold"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_signout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_button_red"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:text="@string/sign_out"
        android:textColor="@color/white"
        android:textStyle="bold"
        />

</LinearLayout>