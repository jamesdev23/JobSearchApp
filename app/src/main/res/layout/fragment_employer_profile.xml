<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".employer_viewpager.EmployerProfileFragment">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/image_sample_placeholder"
        android:layout_marginVertical="5dp"
        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:padding="8dp"
        android:textColor="@android:color/black"
        android:text="Name:"
        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:padding="8dp"
        android:textColor="@android:color/black"
        android:text=""
        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_company"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:padding="8dp"
        android:textColor="@android:color/black"
        android:text="Company:"
        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/company"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:padding="8dp"
        android:textColor="@android:color/black"
        android:text=""
        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_position"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:padding="8dp"
        android:textColor="@android:color/black"
        android:text="Position:"
        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/position"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:padding="8dp"
        android:textColor="@android:color/black"
        android:text=""
        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_company_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:padding="8dp"
        android:textColor="@android:color/black"
        android:text="Company Address:"
        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/company_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:padding="8dp"
        android:textColor="@android:color/black"
        android:text=""
        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_company_telephone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:padding="8dp"
        android:textColor="@android:color/black"
        android:text="Telephone Number:"
        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/company_telephone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:padding="8dp"
        android:textColor="@android:color/black"
        android:text=""
        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_company_website"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:padding="8dp"
        android:textColor="@android:color/black"
        android:text="Website:"
        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/company_website"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:padding="8dp"
        android:textColor="@android:color/black"
        android:text=""
        />

</LinearLayout>